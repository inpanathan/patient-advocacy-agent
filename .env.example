# Patient Advocacy Agent â€” Environment Variables
# Copy this to .env and fill in real values. NEVER commit .env to git.

# ---- Application ----
APP_ENV=dev                          # dev | staging | production
APP_DEBUG=true
APP_PORT=8000
MODEL_BACKEND=mock                   # mock | local | cloud

# ---- LLM / Model APIs ----
MEDGEMMA_API_KEY=
MEDGEMMA_MODEL_ID=medgemma-latest
GOOGLE_CLOUD_STT_KEY=               # Speech-to-Text
GOOGLE_CLOUD_TTS_KEY=               # Text-to-Speech

# ---- Local Models ----
LLM__MEDGEMMA_MODEL_ID=google/medgemma-4b-it
LLM__DEVICE=auto                     # cuda | cpu | auto
LLM__GOOGLE_API_KEY=                 # Gemini API key (cloud mode)
EMBEDDING__MODEL_ID=google/siglip-so400m-patch14-384
EMBEDDING__DEVICE=auto
VOICE__WHISPER_MODEL_SIZE=large-v3
VOICE__PIPER_VOICES_DIR=models/piper

# ---- Cloud (Google) ----
VOICE__GOOGLE_CLOUD_PROJECT=         # GCP project ID
VOICE__GOOGLE_APPLICATION_CREDENTIALS= # Path to service account JSON

# ---- Embedding Model ----
SIGLIB2_MODEL_PATH=models/siglip2   # Local path to SigLIP-2 weights
EMBEDDING_DIM=768

# ---- Vector Store ----
CHROMA_PERSIST_DIR=data/chroma      # ChromaDB persistence directory

# ---- SCIN Database ----
SCIN_DATA_DIR=data/raw/scin         # Path to SCIN dataset

# ---- Experiment Tracking ----
MLFLOW_TRACKING_URI=http://localhost:5000

# ---- Email (Case History Delivery) ----
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
CASE_HISTORY_RECIPIENT=

# ---- Secrets ----
SECRET_KEY=                          # App secret key for sessions

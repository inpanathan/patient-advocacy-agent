# ---- Application ----
APP_ENV=dev                          # dev | staging | production
APP_DEBUG=true
APP_PORT=8000

# ---- LLM / Model APIs ----
MEDGEMMA_API_KEY=
MEDGEMMA_MODEL_ID=medgemma-latest
GOOGLE_CLOUD_STT_KEY=               # Speech-to-Text
GOOGLE_CLOUD_TTS_KEY=               # Text-to-Speech

# ---- Embedding Model ----
SIGLIB2_MODEL_PATH=models/siglip2   # Local path to SigLIP-2 weights
EMBEDDING_DIM=768

# ---- Vector Store ----
CHROMA_PERSIST_DIR=data/chroma      # ChromaDB persistence directory

# ---- SCIN Database ----
SCIN_DATA_DIR=data/raw/scin         # Path to SCIN dataset

# ---- Experiment Tracking ----
MLFLOW_TRACKING_URI=http://localhost:5000

# ---- Email (Case History Delivery) ----
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
CASE_HISTORY_RECIPIENT=

# ---- Secrets ----
SECRET_KEY=                          # App secret key for sessions
